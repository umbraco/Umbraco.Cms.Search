{
  "$schema": "appsettings-schema.json",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console"
            }
          ]
        }
      }
    ]
  },
  "Umbraco": {
    "CMS": {
      "Content": {
        "MacroErrors": "Throw"
      },
      "Security": {
        "KeepUserLoggedIn": true
      },
      "Hosting": {
        "Debug": true
      },
      "Unattended": {
        "InstallUnattended": true,
        "UpgradeUnattended": true,
        "UnattendedUserEmail": "admin@local",
        "UnattendedUserName": "admin@local",
        "UnattendedUserPassword": "1234567890",
        "PackageMigrationsUnattended": true
      }
    }
  },
  "uSync": {
    "Settings": {
      "RootFolder": "../_uSync/Shared/",
      "ImportAtStartup": "All"
    }
  }
}
